rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // Admin access should be based on Firebase Custom Claims:
    // set `admin: true` on the user via Firebase Admin SDK / Cloud Function / CLI tooling.
    function isAdmin() {
      return request.auth != null && request.auth.token.admin == true;
    }

    // Изображения процедур - читать все, писать только админ
    match /procedures/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Фото специалиста - читать все, писать только админ
    match /about/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}


